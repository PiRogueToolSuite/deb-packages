# Default PiRogue web server configuration
#

map $http_upgrade $connection_upgrade {
  default upgrade;
  '' close;
}

upstream grafana {
  server localhost:3000;
}

server {
  # Localhost binding
  listen 127.0.0.1:80 default_server;
  listen [::1]:80 default_server;

  root /usr/share/pirogue-external-exposure/htdocs;

  # Add index.php to the list if you are using PHP
  index index.html index.htm index.nginx-debian.html;

  server_name _;

  location / {
    # First attempt to serve request as file, then
    # as directory, then fall back to displaying a 404.
    try_files $uri $uri/ =404;
  }

  location /dashboard/ {
    proxy_set_header Host $host;
    rewrite  ^/dashboard/(.*)  /$1 break;
    proxy_pass http://grafana;
  }

  location /dashboard/api/live/ {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    rewrite  ^/dashboard/(.*)  /$1 break;
    proxy_pass http://grafana;
  }
}

server {
  # External network binding
  listen @EXTERNAL_ADDRESS@:80;

  root /usr/share/pirogue-external-exposure/htdocs;

  server_name _;

  location / {
    # First attempt to serve request as file, then
    # as directory, then fall back to displaying a 404.
    try_files $uri $uri/ =404;
  }

  location /dashboard/ {
    proxy_set_header Host $host;
    rewrite  ^/dashboard/(.*)  /$1 break;
    proxy_pass http://grafana;
  }

  location /dashboard/api/live/ {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    rewrite  ^/dashboard/(.*)  /$1 break;
    proxy_pass http://grafana;
  }
}

server {
  # External network binding
  listen @EXTERNAL_ADDRESS@:443 ssl;

  root /usr/share/pirogue-external-exposure/htdocs;

  server_name _;
  ssl_certificate @CERTIFICATE_PATH@/fullchain.pem;
  ssl_certificate_key @CERTIFICATE_PATH@/privkey.pem;
  #ssl_certificate /var/lib/pirogue/admin/pirogue-external-exposure/pirogue-cert.pem;
  #ssl_certificate_key /var/lib/pirogue/admin/pirogue-external-exposure/pirogue-key.pem;

  #server_name @FQDN@;
  #ssl_certificate /etc/letsencrypt/live/@FQDN@/fullchain.pem;
  #ssl_certificate_key /etc/letsencrypt/live/@FQDN@/privkey.pem;

  location / {
    # First attempt to serve request as file, then
    # as directory, then fall back to displaying a 404.
    try_files $uri $uri/ =404;
  }

  location /dashboard/ {
    proxy_set_header Host $host;
    rewrite  ^/dashboard/(.*)  /$1 break;
    proxy_pass http://grafana;
  }

  location /dashboard/api/live/ {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    rewrite  ^/dashboard/(.*)  /$1 break;
    proxy_pass http://grafana;
  }
}

upstream pirogue-admin-daemon {
  server localhost:50051;
}

server {
  # External network binding
  listen @EXTERNAL_ADDRESS@:50051 http2 ssl;

  ssl_certificate @CERTIFICATE_PATH@/fullchain.pem;
  ssl_certificate_key @CERTIFICATE_PATH@/privkey.pem;

  #ssl_certificate /var/lib/pirogue/admin/pirogue-external-exposure/pirogue-cert.pem;
  #ssl_certificate_key /var/lib/pirogue/admin/pirogue-external-exposure/pirogue-key.pem;

  #ssl_protocols TLSv1.2;

  #ssl_certificate /etc/letsencrypt/live/pirogue-1001.sansoft.fr/fullchain.pem;
  #ssl_certificate_key /etc/letsencrypt/live/pirogue-1001.sansoft.fr/privkey.pem;

  location / {
    #grpc_bind $remote_addr transparent;
    grpc_pass grpc://pirogue-admin-daemon;
  }
}